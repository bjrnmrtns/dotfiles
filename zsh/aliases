#!/bin/bash

function ff() {
    find / -name "$1" 2>/dev/null
}

function cmg() {
    cmake -E make_directory build && cmake -E chdir build cmake -G Ninja .. 
}

function cmb() {
    cmake --build build && cmake -E chdir build ctest --output-on-failure
}

function gitstat() {
    git shortlog -s -n --all --no-merges
}

alias gg='git status'
alias e='vim'
alias b='cmake --build .'
alias ss='source ~/.zshrc'
alias cmake-list-projects='find -name CMakeLists.txt | xargs cat | grep project'
alias gitstat='gitstat'
# search and replace in file -> find -name \*.cpp | xargs sed -i -e 's/MATCH/REPLACEMENT/g'
